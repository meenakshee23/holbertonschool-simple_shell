#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
/**
 * main - find full path of commands in PATH
 * @ac: argument count
 * @av: argument vector
 *
 * Return: 0 on success, 1 on error
 */
int main(int ac, char **av)
{
    char *path, *dir;
    char full_path[1024];
    int i;

    if (ac < 2)
    {
        printf("Usage: %s filename ...\n", av[0]);
        return (1);
    }

    path = getenv("PATH");
    if (!path)
        return (1);

    for (i = 1; i < ac; i++)
    {
        char *path_copy = strdup(path);
        dir = strtok(path_copy, ":");

        while (dir)
        {
            snprintf(full_path, sizeof(full_path), "%s/%s", dir, av[i]);
            if (access(full_path, X_OK) == 0)
            {
                printf("%s\n", full_path);
                break;
            }
            dir = strtok(NULL, ":");
        }

        free(path_copy);
    }

    return (0);
}
